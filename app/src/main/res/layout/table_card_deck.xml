<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    tools:context="jp.co.cybird.android.conanseek.activity.card.CardListPageFragment">

    <LinearLayout
        android:layout_width="@dimen/frame_card_cardlist_wrapper_width"
        android:layout_height="@dimen/frame_card_cardlist_container_zukan_height"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/deck_title_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dialog_normal_content_div"
            android:src="@mipmap/label_deck_1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/deck_arrow"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/frame_card_cardlist_card_text_height"
            android:layout_alignParentTop="true">


            <include
                layout="@layout/view_card_deck_cell"
                android:id="@+id/list_cell_0"
                android:layout_width="@dimen/frame_card_deck_waku_width"
                android:layout_height="@dimen/frame_card_deck_cell_height"
                android:layout_marginRight="@dimen/dialog_normal_content_div"/>

            <include
                layout="@layout/view_card_deck_cell"
                android:id="@+id/list_cell_1"
                android:layout_width="@dimen/frame_card_deck_waku_width"
                android:layout_height="@dimen/frame_card_deck_cell_height"
                android:layout_marginRight="@dimen/dialog_normal_content_div"/>

            <include
                layout="@layout/view_card_deck_cell"
                android:id="@+id/list_cell_2"
                android:layout_width="@dimen/frame_card_deck_waku_width"
                android:layout_height="@dimen/frame_card_deck_cell_height"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
