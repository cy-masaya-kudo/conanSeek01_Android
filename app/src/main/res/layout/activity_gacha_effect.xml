<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/wrapper_width"
        android:layout_height="@dimen/wrapper_height"
        android:layout_gravity="center"
        android:id="@+id/wrapper">

        <ImageView
            android:id="@+id/gacha_anim_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/anim_bg"
            android:scaleType="fitXY"/>

        <FrameLayout
            android:id="@+id/gacha_anim_scene_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/gacha_anim_conan_1"
                android:layout_width="500dp"
                android:layout_height="300dp"
                android:layout_marginLeft="60dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/anim_conan"/>

            <ImageView
                android:id="@+id/gacha_anim_ball_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="110dp"
                android:src="@mipmap/anim_ball_gold"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/gacha_anim_scene_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/gacha_anim_cat"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/anim_cut1"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:layout_width="600dp"
                    android:layout_height="500dp"
                    android:layout_marginLeft="100dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/anim_conan"/>
                <ImageView
                    android:id="@+id/gacha_anim_ball_2"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="140dp"
                    android:src="@mipmap/anim_ball_gold"/>
                <ImageView
                    android:id="@+id/gacha_anim_ball_white"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="140dp"
                    android:src="@mipmap/anim_ball_white"/>
            </FrameLayout>

            <ImageView
                android:id="@+id/gacha_anim_shine_2"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_marginTop="-90dp"
                android:layout_marginLeft="-30dp"
                android:src="@mipmap/anim_shine2"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/gacha_anim_scene_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/gacha_anim_ball_3"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginLeft="650dp"
                android:layout_marginTop="110dp"
                android:src="@mipmap/anim_ball_gold"/>



            <ImageView
                android:id="@+id/gacha_anim_shine_3"
                android:layout_width="600dp"
                android:layout_height="600dp"
                android:layout_gravity="center"
                android:src="@mipmap/anim_shine2"/>

            <FrameLayout
                android:id="@+id/gacha_anim_card_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="80dp"
                    android:orientation="horizontal">
                    <ImageView android:layout_width="100dp" android:id="@+id/card_frame_0" android:layout_height="140dp" android:layout_margin="5dp" android:src="@mipmap/card_bg_small"/>
                    <ImageView android:layout_width="100dp" android:id="@+id/card_frame_1" android:layout_height="140dp" android:layout_margin="5dp" android:src="@mipmap/card_bg_small"/>
                    <ImageView android:layout_width="100dp" android:id="@+id/card_frame_2" android:layout_height="140dp" android:layout_margin="5dp" android:src="@mipmap/card_bg_small"/>
                    <ImageView android:layout_width="100dp" android:id="@+id/card_frame_3" android:layout_height="140dp" android:layout_margin="5dp" android:src="@mipmap/card_bg_small"/>
                    <ImageView android:layout_width="100dp" android:id="@+id/card_frame_4" android:layout_height="140dp" android:layout_margin="5dp" android:src="@mipmap/card_bg_small"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginTop="80dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <ImageView android:layout_width="100dp" android:id="@+id/card_frame_5" android:layout_height="140dp" android:layout_margin="5dp" android:src="@mipmap/card_bg_small"/>
                    <ImageView android:layout_width="100dp" android:id="@+id/card_frame_6" android:layout_height="140dp" android:layout_margin="5dp" android:src="@mipmap/card_bg_small"/>
                    <ImageView android:layout_width="100dp" android:id="@+id/card_frame_7" android:layout_height="140dp" android:layout_margin="5dp" android:src="@mipmap/card_bg_small"/>
                    <ImageView android:layout_width="100dp" android:id="@+id/card_frame_8" android:layout_height="140dp" android:layout_margin="5dp" android:src="@mipmap/card_bg_small"/>
                    <ImageView android:layout_width="100dp" android:id="@+id/card_frame_9" android:layout_height="140dp" android:layout_margin="5dp" android:src="@mipmap/card_bg_small"/>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/gacha_anim_card_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <ImageView android:layout_width="220dp" android:id="@+id/card_frame_large" android:layout_height="300dp" android:layout_margin="5dp" android:src="@mipmap/card_bg_small"/>
            </FrameLayout>


        </FrameLayout>

        <ImageView
            android:id="@+id/gacha_anim_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <View
            android:alpha="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff" />


        <FrameLayout android:id="@+id/popup_container" android:layout_width="match_parent" android:layout_height="match_parent" />
        <FrameLayout android:id="@+id/tutorial_container" android:layout_width="match_parent" android:layout_height="match_parent" />
        <FrameLayout android:id="@+id/effect_container" android:layout_width="match_parent" android:layout_height="match_parent" />


    </RelativeLayout>

</FrameLayout>
