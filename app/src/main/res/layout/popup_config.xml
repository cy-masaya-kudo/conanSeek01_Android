<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:id="@+id/wrapper">

    <RelativeLayout
        android:id="@+id/wrapper_inner"
        android:layout_width="@dimen/dialog_normal_size_width"
        android:layout_height="@dimen/dialog_normal_size_height"
        android:layout_gravity="center"
        android:background="@mipmap/popup_background">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_normal_margin"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/title_settei" />


        <jp.co.cybird.android.conanseek.common.BaseButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@mipmap/btn_back"
            android:background="@null"
            android:layout_marginLeft="@dimen/dialog_close_left"
            android:layout_marginTop="@dimen/dialog_close_top"
            android:id="@+id/dialog_close" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingTop="@dimen/dialog_normal_content_div">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_normal_content_div">
                <jp.co.cybird.android.conanseek.common.BaseButton
                    android:id="@+id/btn_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@mipmap/btn_sound"
                    android:layout_marginRight="@dimen/dialog_normal_content_div"/>
                <jp.co.cybird.android.conanseek.common.BaseButton
                    android:id="@+id/btn_torihiki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@mipmap/btn_torihiki"
                    android:layout_toRightOf="@+id/btn_sound"
                    android:layout_marginLeft="@dimen/dialog_normal_content_div"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_normal_content_div">
                <jp.co.cybird.android.conanseek.common.BaseButton
                    android:id="@+id/btn_shikin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@mipmap/btn_kessai"
                    android:layout_marginRight="@dimen/dialog_normal_content_div"/>
                <jp.co.cybird.android.conanseek.common.BaseButton
                    android:id="@+id/btn_kiyaku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@mipmap/btn_kiyaku"
                    android:layout_toRightOf="@+id/btn_shikin"
                    android:layout_marginLeft="@dimen/dialog_normal_content_div"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_normal_content_div">
                <jp.co.cybird.android.conanseek.common.BaseButton
                    android:id="@+id/btn_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@mipmap/btn_privacy"
                    android:layout_marginRight="@dimen/dialog_normal_content_div"/>
                <jp.co.cybird.android.conanseek.common.BaseButton
                    android:id="@+id/btn_toiawase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@mipmap/btn_contact"
                    android:layout_toRightOf="@+id/btn_privacy"
                    android:layout_marginLeft="@dimen/dialog_normal_content_div"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_normal_content_div">
                <jp.co.cybird.android.conanseek.common.BaseButton
                    android:id="@+id/btn_miseinen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@mipmap/btn_miseinen"
                    android:layout_marginRight="@dimen/dialog_normal_content_div"/>
                <jp.co.cybird.android.conanseek.common.BaseButton
                    android:id="@+id/btn_howto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@mipmap/btn_asobi"
                    android:layout_toRightOf="@+id/btn_miseinen"
                    android:layout_marginLeft="@dimen/dialog_normal_content_div"/>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
