<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/wrapper">

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"/>

    <FrameLayout
        android:id="@+id/background"
        android:layout_width="@dimen/wrapper_width"
        android:layout_height="@dimen/wrapper_height"
        android:background="#000000"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/machine"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@mipmap/machine"/>

        <ImageView
            android:id="@+id/machine_white"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:alpha="0"
            android:src="@mipmap/machine_white"/>

        <ImageView
            android:id="@+id/halo1"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:alpha="0"
            android:src="@mipmap/ring"/>

        <ImageView
            android:id="@+id/halo2"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:alpha="0"
            android:src="@mipmap/ring"/>

        <ImageView
            android:id="@+id/halo3"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:alpha="0"
            android:src="@mipmap/ring"/>

        <ImageView
            android:id="@+id/shine"
            android:layout_width="460dp"
            android:layout_height="460dp"
            android:layout_gravity="center"
            android:alpha="0"
            android:src="@mipmap/anim_shine2"/>



    </FrameLayout>

</FrameLayout>
