<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <FrameLayout
        android:layout_width="451dp"
        android:layout_height="44dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/space_mission"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/mission_jouken_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/dialog_normal_content_div"
            android:textSize="@dimen/text_size_regular"
            android:textColor="#000000"
            android:text="fdsafdsa"/>

        <TextView
            android:id="@+id/mission_reward_label"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="right"
            android:textSize="@dimen/text_size_regular"
            android:textAlignment="center"
            android:textColor="#000000"
            android:text="321312"/>

        <ImageView
            android:id="@+id/mission_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mark_done"
            android:visibility="invisible"/>

    </FrameLayout>
</FrameLayout>
