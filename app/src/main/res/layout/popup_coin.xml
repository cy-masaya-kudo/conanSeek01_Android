<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:id="@+id/wrapper">

    <RelativeLayout
        android:id="@+id/wrapper_inner"
        android:layout_width="@dimen/dialog_normal_size_width"
        android:layout_height="@dimen/dialog_normal_size_height"
        android:layout_gravity="center"
        android:background="@mipmap/popup_background">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_normal_margin"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/title_coin_kounyuu" />

        <jp.co.cybird.android.conanseek.common.BaseButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@mipmap/btn_back"
            android:background="@null"
            android:layout_marginLeft="@dimen/dialog_close_left"
            android:layout_marginTop="@dimen/dialog_close_top"
            android:id="@+id/dialog_close" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingTop="@dimen/dialog_normal_content_div">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dialog_normal_content_div"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dialog_normal_content_div">
                    <jp.co.cybird.android.conanseek.common.BaseButton
                        android:id="@+id/btn_dialog_coin_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        android:src="@mipmap/btn_shop_coin1" />
                    <TextView
                        android:id="@+id/label_dialog_coin_1"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="　　-　　"
                        android:textAlignment="center"
                        android:layout_gravity="bottom|center"
                        android:textColor="#000000"
                        android:layout_marginBottom="@dimen/dialog_normal_coin_text_bottom"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dialog_normal_content_div">
                    <jp.co.cybird.android.conanseek.common.BaseButton
                        android:id="@+id/btn_dialog_coin_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        android:src="@mipmap/btn_shop_coin5" />
                    <TextView
                        android:id="@+id/label_dialog_coin_5"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="　　-　　"
                        android:textAlignment="center"
                        android:layout_gravity="bottom|center"
                        android:textColor="#000000"
                        android:layout_marginBottom="@dimen/dialog_normal_coin_text_bottom"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <jp.co.cybird.android.conanseek.common.BaseButton
                        android:id="@+id/btn_dialog_coin_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        android:src="@mipmap/btn_shop_coin12" />
                    <TextView
                        android:id="@+id/label_dialog_coin_12"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="　　-　　"
                        android:textAlignment="center"
                        android:layout_gravity="bottom|center"
                        android:textColor="#000000"
                        android:layout_marginBottom="@dimen/dialog_normal_coin_text_bottom"/>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:paddingTop="@dimen/dialog_normal_content_div">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dialog_normal_content_div">
                    <jp.co.cybird.android.conanseek.common.BaseButton
                        android:id="@+id/btn_dialog_coin_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        android:src="@mipmap/btn_shop_coin24" />
                    <TextView
                        android:id="@+id/label_dialog_coin_24"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="　　-　　"
                        android:textAlignment="center"
                        android:layout_gravity="bottom|center"
                        android:textColor="#000000"
                        android:layout_marginBottom="@dimen/dialog_normal_coin_text_bottom"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dialog_normal_content_div">
                    <jp.co.cybird.android.conanseek.common.BaseButton
                        android:id="@+id/btn_dialog_coin_50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        android:src="@mipmap/btn_shop_coin50" />
                    <TextView
                        android:id="@+id/label_dialog_coin_50"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="　　-　　"
                        android:textAlignment="center"
                        android:layout_gravity="bottom|center"
                        android:textColor="#000000"
                        android:layout_marginBottom="@dimen/dialog_normal_coin_text_bottom"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <jp.co.cybird.android.conanseek.common.BaseButton
                        android:id="@+id/btn_dialog_coin_100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        android:src="@mipmap/btn_shop_coin100" />
                    <TextView
                        android:id="@+id/label_dialog_coin_100"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="　　-　　"
                        android:textAlignment="center"
                        android:layout_gravity="bottom|center"
                        android:textColor="#000000"
                        android:layout_marginBottom="@dimen/dialog_normal_coin_text_bottom"/>
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</FrameLayout>
